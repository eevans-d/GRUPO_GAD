# ------------------------------------------------------------------
# GENERAL PROJECT CONFIGURATION
# ------------------------------------------------------------------
# Environment: local, staging, production
ENVIRONMENT=local
LOG_LEVEL=INFO
TZ=UTC

# ------------------------------------------------------------------
# DATABASE (POSTGIS)
# ------------------------------------------------------------------
# Credentials
POSTGRES_USER=gad_user
POSTGRES_PASSWORD=CHANGEME_POSTGRES_PASSWORD
POSTGRES_DB=gad_db
POSTGRES_SERVER=db
POSTGRES_PORT=5432

# Full connection URL for the application
# Format: postgresql+<driver>://<user>:<password>@<host>:<port>/<db>
DATABASE_URL=postgresql+asyncpg://gad_user:CHANGEME_POSTGRES_PASSWORD@db:5432/gad_db

# ------------------------------------------------------------------
# API & SECURITY
# ------------------------------------------------------------------
# WARNING: MUST be a long, random, and secret string
SECRET_KEY=CHANGEME_RANDOM_32_CHAR_SECRET_KEY
ACCESS_TOKEN_EXPIRE_MINUTES=60

# ------------------------------------------------------------------
# TELEGRAM BOT
# ------------------------------------------------------------------
TELEGRAM_TOKEN=CHANGEME_TELEGRAM_BOT_TOKEN
ADMIN_CHAT_ID=CHANGEME_TELEGRAM_ADMIN_CHAT_ID

# Whitelisted Telegram user IDs as a JSON string
WHITELIST_IDS='[]'

# ------------------------------------------------------------------
# REDIS CACHE
# ------------------------------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=CHANGEME_REDIS_PASSWORD
