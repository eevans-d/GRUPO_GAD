# ------------------------------------------------------------------
# GENERAL PROJECT CONFIGURATION - PRODUCTION
# ------------------------------------------------------------------
ENVIRONMENT=production
LOG_LEVEL=INFO
TZ=UTC

# ------------------------------------------------------------------
# DATABASE (POSTGIS)
# ------------------------------------------------------------------
# Explicit connection URL for production environment
DATABASE_URL=postgresql+asyncpg://user:pass@db:5432/db

# ------------------------------------------------------------------
# API & SECURITY
# ------------------------------------------------------------------
# WARNING: MUST be a long, random, and secret string
SECRET_KEY=CHANGEME_PROD_RANDOM_32_CHAR_SECRET_KEY
ACCESS_TOKEN_EXPIRE_MINUTES=60

# ------------------------------------------------------------------
# TELEGRAM BOT
# ------------------------------------------------------------------
TELEGRAM_TOKEN=CHANGEME_PROD_TELEGRAM_BOT_TOKEN
ADMIN_CHAT_ID=CHANGEME_PROD_TELEGRAM_ADMIN_CHAT_ID

# Whitelisted Telegram user IDs as a JSON string
WHITELIST_IDS='[]'

# ------------------------------------------------------------------
# REDIS CACHE
# ------------------------------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=CHANGEME_PROD_REDIS_PASSWORD
