{
    # Opciones globales
    # Activar logs de depuración si es necesario
    # debug
}

# Dominio principal para la API
:80 {
    # Habilitar compresión para mejorar el rendimiento
    encode zstd gzip

    # Configuración del reverse proxy al servicio de la API
    # Caddy resolverá "api" a la IP interna del contenedor de la API
    reverse_proxy api:8000 {
        # Pasar la información del host y la IP real del cliente
        header_up Host {host}
        header_up X-Real-IP {remote_ip}
        header_up X-Forwarded-For {remote_ip}
        header_up X-Forwarded-Proto {scheme}
    }

    # Manejo de logs
    log {
        output file /var/log/caddy/access.log {
            roll_size 10mb
            roll_keep 5
            roll_keep_for 720h
        }
    }

    # Manejo de errores
    handle_errors {
        respond "{http.error.status_code} {http.error.status_text}"
    }
}